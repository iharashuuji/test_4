<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table>
        <tbody>
          <tr>
            <td><i class="fa-solid fa-user-cog"></i> User info</td>
          </tr>
          <tr>
            <td>
              <%= render 'users/profile', user: @user %>
            </td>
          </tr>
          <tr>
            <td><i class="fa-solid fa-book"></i> New book</td>
          </tr>
          <tr>
            <td>
              <%= render 'books/list', book: @book %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>画像</th>
            <th>名前</th>
            <th>詳細</th>
            <th>アクション</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(200, 200) %></td>
              <td><%= user.name %></td>
              <td><%= user.introduction %></td>
              <td><%= link_to 'Show', user_path(user.id) %></td>
              <td>
                <% if user == current_user %>
                  <%= link_to 'Edit profile', edit_user_path(user.id) %>
                <% else %>
                  <%= link_to "Edit profile", user_path(user.id) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
