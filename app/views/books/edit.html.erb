<h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "投稿画像", accept: "image/*" %> 
  <label for="inputBody">Body</label>
  <%= f.text_area :body, id: "inputBody", placeholder: "本文" %> 
  <%= f.submit "Update Book" %>
  <%= link_to 'Show', book_path(@book) %>
<% end %>
<%= link_to 'Back', books_path %>
